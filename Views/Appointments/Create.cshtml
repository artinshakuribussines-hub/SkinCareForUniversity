@model SkinCareForUniversity.Models.Appointment

<section class="space-y-6 p-6 md:p-10">
    <div class="panel">
        <h1 class="text-2xl font-bold text-black dark:text-white">ثبت نوبت جدید</h1>
        <p class="text-sm text-gray-500">فرم نوبت‌دهی آنلاین برای خدمات پوستی دانشگاه</p>
    </div>

    <div class="panel">
        <form asp-action="Create" class="grid gap-4 md:grid-cols-2">
            <div>
                <label asp-for="FullName" class="mb-1 block text-sm font-semibold text-gray-600"></label>
                <input asp-for="FullName" class="form-input w-full" placeholder="مثلاً سارا محمدی" />
                <span asp-validation-for="FullName" class="text-xs text-danger"></span>
            </div>
            <div>
                <label asp-for="StudentId" class="mb-1 block text-sm font-semibold text-gray-600"></label>
                <input asp-for="StudentId" class="form-input w-full" placeholder="مثلاً ۹۹۱۲۳۴۵۶" />
                <span asp-validation-for="StudentId" class="text-xs text-danger"></span>
            </div>
            <div>
                <label asp-for="PhoneNumber" class="mb-1 block text-sm font-semibold text-gray-600"></label>
                <input asp-for="PhoneNumber" class="form-input w-full" placeholder="۰۹۱۲۱۲۳۴۵۶۷" />
                <span asp-validation-for="PhoneNumber" class="text-xs text-danger"></span>
            </div>
            <div>
                <label asp-for="ServiceType" class="mb-1 block text-sm font-semibold text-gray-600"></label>
                <select asp-for="ServiceType" class="form-select w-full">
                    <option value="">انتخاب کنید</option>
                    <option>فیشیال دانشجویی</option>
                    <option>درمان آکنه</option>
                    <option>درمان لک</option>
                    <option>مشاوره پوست</option>
                </select>
                <span asp-validation-for="ServiceType" class="text-xs text-danger"></span>
            </div>
            <div>
                <label asp-for="AppointmentDate" class="mb-1 block text-sm font-semibold text-gray-600"></label>
                <input asp-for="AppointmentDate" class="form-input w-full" type="date" />
                <span asp-validation-for="AppointmentDate" class="text-xs text-danger"></span>
            </div>
            <div>
                <label asp-for="AppointmentTime" class="mb-1 block text-sm font-semibold text-gray-600"></label>
                <input asp-for="AppointmentTime" class="form-input w-full" type="time" />
                <span asp-validation-for="AppointmentTime" class="text-xs text-danger"></span>
            </div>
            <div class="md:col-span-2">
                <label asp-for="Notes" class="mb-1 block text-sm font-semibold text-gray-600"></label>
                <textarea asp-for="Notes" class="form-textarea w-full" rows="3" placeholder="اگر حساسیت دارویی یا سابقه درمان دارید بنویسید."></textarea>
                <span asp-validation-for="Notes" class="text-xs text-danger"></span>
            </div>
            <div class="md:col-span-2 flex flex-wrap items-center justify-between gap-3">
                <label class="flex items-center gap-2 text-sm text-gray-500">
                    <input asp-for="AcceptTerms" class="form-checkbox" />
                    قوانین و حفظ حریم خصوصی را می‌پذیرم.
                </label>
                <span asp-validation-for="AcceptTerms" class="text-xs text-danger"></span>
                <div class="flex gap-2">
                    <button type="submit" class="btn btn-primary">ثبت درخواست</button>
                    <a asp-action="Index" class="btn btn-outline-primary">بازگشت</a>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
